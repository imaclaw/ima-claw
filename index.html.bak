<style>
*{margin:0;padding:0;box-sizing:border-box}
html{overflow-x:hidden;width:100%;scrollbar-width:none;-ms-overflow-style:none}
html::-webkit-scrollbar{display:none}
:root{
  --lobster:#D4403A;--lobster-light:#E8584E;--lobster-glow:rgba(212,64,58,0.15);
  --blue:#8BA4C4;--yellow:#F2C744;
  --bg:#0C0C12;--surface:#13131D;--surface-2:#1B1B28;--surface-3:#242435;
  --text:#E8E8ED;--text-2:rgba(255,255,255,0.55);--text-3:rgba(255,255,255,0.35);
  --border:rgba(255,255,255,0.06);--border-hover:rgba(255,255,255,0.12);
  --gradient:linear-gradient(135deg,#D4403A 0%,#E8584E 40%,#F2C744 100%);
}
body{font-family:'Inter',-apple-system,'PingFang SC','Hiragino Sans GB','Microsoft YaHei',sans-serif;color:var(--text);background:var(--bg);overflow-x:hidden;-webkit-font-smoothing:antialiased}
a{text-decoration:none;color:inherit}

/* Language toggle */
[data-en],[data-es],[data-ja],[data-ar]{display:none}
.lang-dropdown{display:inline-block}
.lang-trigger{padding:6px 12px;border-radius:8px;border:1px solid var(--border);background:rgba(255,255,255,0.04);color:var(--text-2);font-size:12px;cursor:pointer;font-weight:500}
.lang-trigger:hover{border-color:var(--lobster)}
.lang-menu{display:none;position:absolute;top:100%;right:0;margin-top:6px;background:var(--surface);border:1px solid var(--border);border-radius:10px;padding:4px;min-width:140px;z-index:1002;box-shadow:0 8px 24px rgba(0,0,0,0.4)}
.lang-dropdown.open .lang-menu{display:block}
.lang-menu button{display:block;width:100%;padding:8px 12px;border:none;background:transparent;color:var(--text-2);font-size:13px;text-align:left;cursor:pointer;border-radius:6px}
.lang-menu button:hover{background:rgba(231,76,60,0.1);color:var(--lobster-light)}



/* Navigation - minimal like OpenClaw */
nav{position:fixed;top:0;left:0;right:0;z-index:1000;padding:16px 40px;display:flex;align-items:center;justify-content:space-between;transition:all .4s}
nav.scrolled{background:rgba(12,12,18,0.92);backdrop-filter:blur(20px);border-bottom:1px solid var(--border)}
.logo{display:flex;align-items:center;gap:10px}
.logo img{height:40px;width:40px;border-radius:8px}
.logo-text{font-size:18px;font-weight:800;letter-spacing:-0.02em;color:var(--text)}
.logo-text b{color:var(--lobster-light)}
.nav-links{display:flex;gap:28px;align-items:center}
.nav-links a{color:var(--text-3);font-size:13px;font-weight:500;transition:color .3s}
.nav-links a:hover{color:var(--text)}
.nav-cta{padding:8px 18px;border-radius:8px;background:var(--lobster);color:#fff;font-size:13px;font-weight:600;transition:all .3s}
.nav-cta:hover{background:var(--lobster-light)}

/* Hero - centered like OpenClaw but with mascot */
.hero{min-height:100vh;display:flex;flex-direction:column;align-items:center;justify-content:center;position:relative;overflow:hidden;padding:100px 40px 48px;text-align:center}
/* Ambient glow */
.hero::before{content:'';position:absolute;top:0;left:50%;transform:translateX(-50%);width:800px;height:500px;background:radial-gradient(ellipse,rgba(212,64,58,0.08) 0%,transparent 70%);pointer-events:none}
.hero-mascot{margin-bottom:24px;position:relative;z-index:1}
.hero-mascot img{width:clamp(120px,10vw,140px);height:clamp(120px,10vw,140px);object-fit:contain;filter:drop-shadow(0 20px 40px rgba(212,64,58,0.3));animation:float 4s ease-in-out infinite}

@keyframes btn-glow{0%,100%{box-shadow:0 0 8px rgba(231,76,60,0.3),0 0 24px rgba(231,76,60,0.1)}50%{box-shadow:0 0 16px rgba(231,76,60,0.5),0 0 48px rgba(231,76,60,0.2)}}
@keyframes float{0%,100%{transform:translateY(0)}50%{transform:translateY(-12px)}}
.hero-title{font-size:clamp(30px,5vw,64px);font-weight:900;line-height:1.05;letter-spacing:-0.04em;margin-bottom:24px;position:relative;z-index:1}
.hero-subtitle{font-size:clamp(11px,1vw,13px);font-weight:600;color:var(--lobster-light);letter-spacing:0.15em;text-transform:uppercase;margin-bottom:14px}
.hero-desc{font-size:clamp(13px,1.2vw,16px);color:var(--text-2);line-height:1.5;max-width:900px;margin:0 auto 6px}
/* Channel badges */
.channels{display:flex;gap:6px;justify-content:center;flex-wrap:nowrap;margin-bottom:14px}
.hero-private{margin:14px auto 18px;display:flex;gap:8px;justify-content:center;flex-wrap:nowrap}
.hero-private .hp-item{padding:clamp(8px,0.8vw,12px) clamp(16px,1.5vw,24px);background:rgba(212,64,58,0.08);border:1px solid rgba(212,64,58,0.2);border-radius:10px;font-size:clamp(13px,1.1vw,16px);color:var(--accent);font-weight:600;text-align:center;white-space:nowrap}

.wf-layout{display:flex;align-items:center;gap:clamp(24px,4vw,60px);max-width:1100px;margin:0 auto}
.wf-img{flex:1;min-width:0}
.wf-img img{width:100%;border-radius:16px;display:block}
.wf-text{flex:1;text-align:left;min-width:0}


.hero-byline{font-size:13px;color:var(--text-3);margin-bottom:8px;letter-spacing:0.02em}
.private{padding:80px 40px;text-align:center}
.priv-grid{display:grid;grid-template-columns:1fr 1fr;gap:40px;max-width:900px;margin:40px auto 0;text-align:left}
.priv-box{padding:32px;background:var(--surface);border:1px solid var(--border);border-radius:16px}
.priv-box h3{font-size:18px;margin-bottom:12px;font-weight:700}
.priv-box p{font-size:14px;color:var(--text-2);line-height:1.7}
.plat-icons{display:flex;flex-wrap:wrap;gap:10px;margin-top:16px}
.plat-icons span{padding:8px 16px;background:var(--surface-2);border:1px solid var(--border);border-radius:10px;font-size:13px;font-weight:600}
@media(max-width:700px){.priv-grid{grid-template-columns:1fr}}
.ch{padding:6px 14px;border-radius:6px;background:var(--surface);border:1px solid var(--border);font-size:12px;color:var(--text-3);font-weight:500;transition:all .3s}
.ch:hover{border-color:var(--lobster);color:var(--lobster-light)}
/* Announcement pill like OpenClaw */
.announce{display:inline-flex;align-items:center;gap:10px;padding:6px 16px;border-radius:100px;background:var(--surface);border:1px solid var(--border);margin-bottom:28px;font-size:13px;color:var(--text-2);transition:all .3s;cursor:pointer}
.announce:hover{border-color:var(--border-hover)}
.announce .badge{padding:3px 10px;border-radius:100px;background:var(--lobster);color:#fff;font-size:11px;font-weight:700;letter-spacing:0.02em}
.announce .arrow{color:var(--text-3)}
.cta-row{display:flex;gap:12px;justify-content:center;flex-wrap:wrap}
.btn{padding:14px 28px;border-radius:12px;font-size:15px;font-weight:800;cursor:pointer;transition:all .3s;border:none;display:inline-flex;align-items:center;gap:10px;letter-spacing:0.02em}
.btn-primary{background:var(--lobster);color:#fff;animation:btn-glow 2.5s ease-in-out infinite;transition:transform .2s}
.btn-primary:hover{background:var(--lobster-light);transform:scale(1.05);box-shadow:0 6px 24px rgba(212,64,58,0.4)}
.btn-outline{background:transparent;color:var(--text);border:1px solid var(--border)}
.btn-outline:hover{border-color:var(--border-hover);background:var(--surface)}

/* Sections */
section{padding:clamp(80px,8vw,120px) clamp(40px,5vw,80px);position:relative;text-align:center}
.sec-header{text-align:center;margin-bottom:48px}
.sec-label{font-size:14px;font-weight:600;color:var(--lobster-light);letter-spacing:0.12em;text-transform:uppercase;margin-bottom:14px}
.sec-header h2{font-size:clamp(32px,4.5vw,56px);font-weight:800;letter-spacing:-0.03em;margin-bottom:12px}
.sec-header p{font-size:clamp(16px,1.4vw,20px);color:var(--text-2);max-width:600px;margin:0 auto}

/* Features grid */
.features{background:var(--bg)}
.f-grid{display:grid;grid-template-columns:repeat(3,1fr);gap:12px;max-width:1100px;margin:0 auto}
.f-card{background:var(--surface);border:1px solid var(--border);border-radius:16px;padding:clamp(16px,2vw,32px);transition:all .4s;position:relative;overflow:hidden;text-align:left}
.f-card:hover{border-color:rgba(212,64,58,0.15);background:var(--surface-2);transform:translateY(-2px)}
.f-card .icon{font-size:clamp(24px,2vw,32px);margin-bottom:12px;display:block}
.f-card h3{font-size:clamp(14px,1.4vw,22px);font-weight:700;margin-bottom:8px;letter-spacing:-0.01em}
.f-card p{font-size:clamp(12px,1.2vw,17px);color:var(--text-2);line-height:1.6}

/* Skill Store - like ClawHub cards */
.skills{background:var(--surface)}
.sk-grid{display:flex;gap:10px;flex-wrap:wrap;justify-content:center;max-width:900px;margin:0 auto 48px}
.sk-tag{padding:8px 18px;border-radius:100px;background:var(--surface-2);border:1px solid var(--border);font-size:13px;color:var(--text-2);font-weight:500;display:flex;align-items:center;gap:6px;transition:all .3s;cursor:default}
.sk-tag:hover{border-color:var(--lobster);color:var(--lobster-light)}
.sk-tag::before{content:'';width:5px;height:5px;border-radius:50%;background:var(--lobster);flex-shrink:0}
/* Install command box like ClawHub */
.install-box{max-width:520px;margin:0 auto;background:var(--surface-2);border:1px solid var(--border);border-radius:12px;padding:16px 24px;display:flex;align-items:center;justify-content:space-between;font-family:'SF Mono','Fira Code',monospace;font-size:14px;color:var(--text-2)}
.install-box code{color:var(--text)}
.install-box .copy{padding:6px 12px;border-radius:6px;background:var(--lobster);color:#fff;font-size:12px;font-weight:600;border:none;cursor:pointer;font-family:inherit}

/* Workflow */
.workflow{background:var(--bg)}
.wf-track{display:flex;flex-wrap:wrap;max-width:900px;margin:0 auto;gap:16px;justify-content:center}
.wf-track::before{display:none}
.wf-step{flex:0 0 calc(33.3% - 16px);text-align:center;padding:24px 16px;background:var(--surface);border:1px solid var(--border);border-radius:16px;position:relative;transition:all .3s}
.wf-step:hover{border-color:var(--lobster);transform:translateY(-4px)}
.wf-ico{font-size:40px;margin-bottom:12px;display:block}
.wf-num{width:28px;height:28px;border-radius:50%;background:var(--surface-2);border:1.5px solid var(--lobster);display:flex;align-items:center;justify-content:center;font-size:13px;font-weight:800;margin:0 auto 12px;position:relative;z-index:1}
.wf-step:nth-child(2) .wf-num{border-color:var(--blue)}
.wf-step:nth-child(3) .wf-num{border-color:var(--yellow)}
.wf-step h3{font-size:15px;font-weight:700;margin-bottom:14px}
.wf-step p{font-size:12px;color:var(--text-3);line-height:1.5}

/* Showcase */
.showcase{background:var(--surface)}
.sh-grid{display:grid;grid-template-columns:repeat(3,1fr);gap:16px;max-width:1100px;margin:0 auto}
.sh-card{border-radius:14px;aspect-ratio:16/10;background:var(--surface-2);border:1px solid var(--border);display:flex;align-items:center;justify-content:center;position:relative;overflow:hidden;transition:all .4s}
a.sh-card{text-decoration:none;color:inherit}
.sh-card:hover{border-color:rgba(212,64,58,0.2);transform:translateY(-2px)}
.sh-card .ico{font-size:48px;opacity:0.5}
.sh-card .lbl{position:absolute;bottom:0;left:0;right:0;padding:14px 16px;background:linear-gradient(transparent,rgba(0,0,0,0.7))}
.sh-card .lbl span{font-size:13px;font-weight:600}

/* CTA */
.cta-end{background:var(--bg);text-align:center;position:relative}
.cta-end::before{content:'';position:absolute;top:50%;left:50%;transform:translate(-50%,-50%);width:500px;height:500px;background:radial-gradient(circle,var(--lobster-glow) 0%,transparent 70%);pointer-events:none}
.cta-end h2{font-size:clamp(32px,4.5vw,56px);font-weight:800;margin-bottom:14px;letter-spacing:-0.02em;position:relative}
.cta-end p{font-size:16px;color:var(--text-2);margin-bottom:32px;position:relative}

/* Footer */
footer{background:var(--bg);border-top:1px solid var(--border);padding:40px;text-align:center}
footer p{color:var(--text-3);font-size:12px}
footer a{color:var(--lobster-light)}

/* Responsive */
@media(max-width:900px){.f-grid,.sh-grid{grid-template-columns:1fr 1fr}}

.wf-layout{display:flex;align-items:center;gap:clamp(24px,4vw,60px);max-width:1100px;margin:0 auto}
.wf-img{flex:1;min-width:0}
.wf-img img{width:100%;border-radius:16px;display:block}
.wf-text{flex:1;text-align:left;min-width:0}









@media(max-width:600px){.f-grid,.sh-grid{grid-template-columns:1fr 1fr}.nav-links{display:none}section{padding:72px 20px}.hero{padding:110px 20px 35px;min-height:100vh}.hero-mascot{margin-bottom:36px;margin-top:40px}.hero-mascot img{width:140px;height:140px}.hero-title{font-size:36px;margin-bottom:4px}.hero-subtitle{font-size:12px;margin-bottom:14px;letter-spacing:0.1em}.hero-desc{font-size:14px;margin-bottom:14px;line-height:1.6}.hero-byline{font-size:12px;margin-bottom:4px}.channels{margin-bottom:16px;gap:6px}.channels .ch{padding:5px 12px;font-size:11px}.announce{margin-bottom:8px;font-size:12px;padding:6px 14px}.wf-track{flex-direction:column;gap:12px}.wf-step{flex:0 0 auto}.wf-layout{flex-direction:column;gap:16px}.wf-text{text-align:center}}

/* i18n */
[data-en]{display:none}
html[lang="en"] [data-en]{display:block}
html[lang="en"] span[data-en],html[lang="en"] a[data-en]{display:inline}
html[lang="zh-CN"] span[data-zh],html[lang="zh-CN"] a[data-zh]{display:inline}

</style>
</head>
